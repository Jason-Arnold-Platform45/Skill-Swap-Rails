<div class="container profile-page">
  <h1><%= @user.username %>'s Profile</h1>

  <section class="profile-section">
    <h2>Skills</h2>

    <% if @skills.any? %>
      <ul class="skill-list">
        <% @skills.each do |skill| %>
          <li>
            <%= link_to skill.title, skill_path(skill) %>
            (<%= skill.skill_type.capitalize %>)
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No skills posted yet.</p>
    <% end %>
  </section>

  <section class="profile-section">
    <h2>Matches</h2>

    <% if @matches.any? %>
      <ul class="match-list">
        <% @matches.each do |match| %>
          <li>
            <%= link_to match.skill.title, match_path(match) %>
            â€” <strong><%= match.status.capitalize %></strong>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No matches yet.</p>
    <% end %>
  </section>
</div>
