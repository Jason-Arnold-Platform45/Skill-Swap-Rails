<!DOCTYPE html>
<html>
  <head>
    <title>SkillSwap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar">
      <div class="nav-left">
        <%= link_to "SkillSwap", root_path, class: "nav-logo" %>
      </div>

      <div class="nav-right">
        <% if user_signed_in? %>
          <%= link_to "Skills", skills_path, class: "nav-link" %>
          <%= link_to "Matches", matches_path, class: "nav-link" %>
          <%= link_to current_user.username,
                      user_path(current_user),
                      class: "nav-link" %>

          <%= button_to "Logout",
                        destroy_user_session_path,
                        method: :delete,
                        class: "nav-link logout-btn" %>
        <% end %>
      </div>
    </nav>

    


    <main class="page-content">
      <%= yield %>
    </main>
  </body>
</html>
